<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Min konto</title>
</head>
<body>
  <h1>Mine kontoer</h1>
  <div id="kontoContainer">Laster kontoer...</div>
  <a href="/"><button>Home</button></a>

  <script>
    const brukernavn = localStorage.getItem('brukernavn');
    const kontoContainer = document.getElementById('kontoContainer');

    if (!brukernavn) {
      alert('Du må være logget inn.');
      window.location.href = '/login';
    }

    fetch('/konto', {
      method: 'GET',
      headers: {
        'Content-Type': 'application/json',
        'brukernavn': brukernavn,
      }
    })
    .then(async res => {
      const data = await res.json();
      if (!res.ok) throw new Error(data.message);

      if (data.length === 0) {
        kontoContainer.textContent = "Du har ingen kontoer.";
        return;
      }

      kontoContainer.innerHTML = '';
      data.forEach(konto => {
        const div = document.createElement('div');
        div.innerHTML = `
          <h3>${konto.kontoNavn}</h3>
          <p>Saldo: ${konto.saldo}</p>
          <p>Valuta: ${konto.valuta}</p>
          <p>Bank: ${konto.bank}</p>
          <p>Opprettet: ${konto.opprettelsesdatoK}</p>
          ${konto.lukkedatoK ?`<p>Lukket: ${konto.lukkedatoK}</p>` : ''}
          <hr>
        `;
        kontoContainer.appendChild(div);
      });
    })
    .catch(err => {
      console.error(err);
      kontoContainer.textContent = "Feil ved henting av kontoer.";
    });
  </script>
</body>
</html>
