<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Opprett konto</title>
  <link rel="stylesheet" href="/styles/opprettKonto.css">
  <link rel="stylesheet" href="/styles/index.css">
  <link rel="stylesheet" href="/styles/menyPanel.css">
</head>
<body>

  <%- include ('partials/menyPanel') %>
  
  <main class="main-content">
  <div>
    <h1>Opprett konto</h1>
    <form > 
      <input type="text" placeholder="Navnet pÃ¥ din konto" id="kontoNavn">
      <br>
      <input type="text" placeholder="Opprettelsesdato" id="opprettelsesdatoK">
      <br>
      <input type="text" placeholder="Bank" id="bank">
      <br>
      <input type="text" placeholder="Startsaldo" id="saldo">
      <br>
      <button type="button" class="Submit" id="submitbutton">Submit</button>
    </form>
  </div>
</main>

<script>
  const submitbutton = document.getElementById('submitbutton');
  
  //const bruker = localStorage.getItem('brukernavn');
  
  submitbutton.addEventListener('click', function(event) {
    event.preventDefault(); 
    // const brukernavn = localStorage.getItem('brukernavn');
    const kontoNavn = document.getElementById('kontoNavn').value;
    const opprettelsesdatoK = document.getElementById('opprettelsesdatoK').value;
    const bank = document.getElementById('bank').value;
    const saldo = document.getElementById('saldo').value;
    console.log(brukernavn, kontoNavn, opprettelsesdatoK, bank, saldo)
   
    fetch('/opprettKonto', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',

      },
      body: JSON.stringify({
        kontoNavn: kontoNavn,
        opprettelsesdatoK: opprettelsesdatoK,
        bank: bank, 
        saldo: saldo,
        brukernavn: brukernavn
      })
    })
    .then(async res => {
  const data = await res.json();
  if (!res.ok) throw new Error(data.message);
  alert("Konto opprettet!");
})
.catch(err => {
  console.error(err);
  alert(err.message);
  });
});
</script>
</body>
</html>