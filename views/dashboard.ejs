          </div>
        </section>
    
        <!-- Verdiutvikling -->
        <section class="verdiutvikling">
          <h3>Samlet verdiutvikling</h3>
          <div class="graf-placeholder">[Graf kommer her]</div>
        </section>
    
        <!-- Aksjetabeller -->
        <section class="aksjetabeller">
          <div class="aksjetabell">
            <h3>Topp 5 aksjer etter verdi</h3>
            <table>
              <thead>
