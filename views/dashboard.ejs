<body>
    <h1>Dashboard</h1>

    <%- include ('partials/menyPanel') %>   
    
    <main class="dashboard-innhold">
        <!-- Øverste rad med summer -->
        <section class="samletVerdiBoks">
          <div class="info-boks">
            <h3>Samlet verdi</h3>
