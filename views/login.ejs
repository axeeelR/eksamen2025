<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>login</title>
  <link rel="stylesheet" href="login.css">
</head>
<body>
  <div>
    <h1>Log in</h1>
    <form > 
      <input type="text" placeholder="Brukernavn" id="brukernavn">
      <br>
      <input type="text" placeholder="Password" id="passord">
      <button type="buttoon" class="Submit" id="submitbutton">Submit</button>
    </form>
  </div>
  <a href="/"><button class="home-button">Home</button></a>
  
</body>
<script>
  const submitbutton = document.getElementById('submitbutton');
  
  
  submitbutton.addEventListener('click', function(event) {
    const brukernavn = document.getElementById('brukernavn').value;
    const passord = document.getElementById('passord').value;
    console.log(brukernavn, passord)
    // event.preventDefault(); // Prevent the default form submission
  
    fetch('/login', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({
        brukernavn: brukernavn,
        passord: passord
      })
    })
    .then(response => {
      return response.json()
    })
    .then(data => {
      console.log(data)
      window.location.href = '/';
    })
    .catch(error => console.error('Error:', error));
  });
</script>
</html>