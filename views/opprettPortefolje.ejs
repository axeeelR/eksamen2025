<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Opprett Portefølje</title>
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/portofolje.css">
    <link rel="stylesheet" href="/styles/opprettPortefolje.css">
    <link rel="stylesheet" href="/styles/sentrer.css">
</head>
<body>
    <h1>Opprett Portefølje</h1>

    <form action="/opprettPortefolje" method="POST">
        <label for="navn">Porteføljenavn:</label>
        <input type="text" id="navn" name="navn" required>

        <label for="kontoID">Velg konto:</label>
        <select name="kontoID" id="kontoID" required>
            <% kontoer.forEach(konto => { %>
                <option value="<%= konto.kontoID %>">
                    <%= konto.kontoNavn %> - saldo: <%= konto.saldo %> DKK </option>
            <% }) %>
        </select>
        <button type="submit">Opprett Portefølje</button>
    </form>

    <script>
        const brukernavn = localStorage.getItem('brukernavn');
        
        const submitbutton = document.getElementById('submitbutton');
        submitbutton.addEventListener('click', function(event) {
            event.preventDefault();

            const navn = document.getElementById('navn').value;
            const kontoID = document.getElementById('kontoID').value;

            if (!navn || !kontoID) {
                alert('Vennligst fyll ut alle felt.');
                return;
            }

            fetch('/opprettPortefolje', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    navn: navn,
                    kontoID: kontoID,
                    brukernavn: brukernavn
                })
            })
            .then(async res => {
                const data = await res.json();
                if (!res.ok) throw new Error(data.message);
                alert('Portefølje opprettet:')
                window.location.href = '/portefolje';
            })
            .catch(error => {
                console.error('Error:', error);
            alert(error.message)
            });
        });
    </script>
</body>
</html>